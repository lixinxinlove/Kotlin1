<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="100" android:propertyName="translationX" android:valueTo="1000dp" android:valueType="floatType" />
            <!-- you could have other objectAnimator elements
                 here for "x" and "y", or other properties -->
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="100" android:propertyName="translationX" android:valueTo="0dp" android:valueType="floatType" />
        </set>
    </item>
</selector>